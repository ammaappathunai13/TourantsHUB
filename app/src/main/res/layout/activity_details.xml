<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Details">



    <RelativeLayout
        android:id="@+id/cliccc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:background="@color/light_Gray"
        >
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noimage"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:scrollbars="vertical"
        android:background="@color/dark_gray"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollX="@dimen/cardview_compat_inset_shadow">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green_300"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="பதிவு செய்தவரின் பெயர்" />

            <TextView
                android:id="@+id/nametext"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="this is name text" />

            <TextView
                android:id="@+id/textView10"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/green_300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="போட்டி நடக்கும் இடம்" />

            <TextView
                android:id="@+id/places"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"

                android:textColor="@color/white"

                android:layout_height="wrap_content"
                android:text="this is will be places" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/green_300"
                android:layout_marginLeft="10dp"

                android:layout_height="wrap_content"
                android:text="போட்டி நடக்கும் மாவட்டம்" />

            <TextView
                android:id="@+id/district"
                android:textStyle="bold"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:textColor="@color/white"

                android:text="This is the District" />

            <TextView
                android:id="@+id/textView12"
                android:textStyle="bold"
                android:textColor="@color/green_300"
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="போட்டி நடைபெறும் நாள்" />

            <TextView
                android:id="@+id/stdate"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vizha star date" />

            <TextView
                android:id="@+id/textView13"
                android:textStyle="bold"
                android:textColor="@color/green_300"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="போட்டி நடத்தும் குழு-வின் பெயர்" />

            <TextView
                android:id="@+id/madTdate"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="maadukalikku token date" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:textColor="@color/green_300"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="போட்டிக்கான நுழைவுக்கட்டணம்" />

            <TextView
                android:id="@+id/manTdate"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="manitharkalukku token date" />

            <TextView
                android:id="@+id/d"
                android:textStyle="bold"
                android:textColor="@color/green_300"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="பதிவு செய்தவரின் மொபைல் நம்பர்" />

            <TextView
                android:id="@+id/phonenumber"
                android:textStyle="bold"
                android:textColor="@color/yellow_200"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="phoneNumber" />
            <Button
                android:id="@+id/locations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_A200"
                android:text="Click to Find Location"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="போட்டி நடக்கும் இடத்தை Map-ல் பார்க்க."
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/orange_200"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>