<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_Gray"
    android:layout_height="match_parent"
    tools:context=".VUpload">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_Gray"
            android:orientation="vertical">




            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="கைபந்து போட்டி திருவிழா"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="23dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textColorHint="@color/black"
                android:ems="10"
                android:hint="உங்கள் பெயர்"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/place"
                android:textColorHint="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="160dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="போட்டி நடைபெறும் ஊர்"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/spinnner"

                android:layout_width="match_parent"
                android:layout_height="30dp"
                style="@style/AlertDialog.AppCompat.Light"
                android:spinnerMode="dialog"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="125dp" />

            <EditText
                android:id="@+id/datestart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"

                android:layout_alignParentStart="true"
                android:layout_marginTop="200dp"
                android:ems="10"
                android:focusable="false"
                android:hint="போட்டி நடைபெறும் நாள்"
                android:inputType="textPersonName"
                android:textColor="@color/white"

                android:textStyle="bold" />

            <EditText
                android:id="@+id/madate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:layout_marginTop="80dp"
                android:hint="போட்டி நடத்தும் விழா குழு பெயர்"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/vedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="240dp"
                android:ems="10"
                android:hint="நுழைவு கட்டணடம்"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                android:textSize="17dp"
                android:maxLength="8"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobile"
                android:textColorHint="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="280dp"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="மொபைல் நம்பர் "
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tickk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"
                android:layout_marginTop="390dp"
                android:layout_marginEnd="29dp"
                android:background="@drawable/tick" />
            <TextView
                android:id="@+id/another"
                android:layout_width="wrap_content"
                android:textColorHint="@color/black"

                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text=" Click change image"
                android:textColor="@color/orange_200"
                android:layout_marginTop="405dp"/>
            <Button
                android:id="@+id/imgup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="390dp"
                android:backgroundTintMode="screen"
                android:text="Click to upload image"
                android:textColor="@color/black" />



            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="360dp"
                android:text="கைபந்து போட்டி நடக்கும் location பதிவு செய்க."
                android:textAlignment="center"
                android:textColor="@color/orange_200"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/linktick"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="320dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/tick"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/maplink"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="330dp"
                android:text="Location-ஜ தேர்வு செய்க."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="330dp"
                android:text="Location தேர்வு செய்யப்பட்டது."
                android:textColor="@color/orange_200"
                android:textStyle="bold"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/map"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginTop="320dp"
                android:layout_marginEnd="86dp"
                android:src="@drawable/gmap2" />

            <TextView
                android:id="@+id/s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="430dp"
                android:text="கைபந்து போட்டி போஸ்டரை பதிவு செய்ய."
                android:textAlignment="center"
                android:textColor="@color/orange_200"
                android:textStyle="bold" />
            <Button
                android:id="@+id/upload"
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="470dp"
                android:text="SUBMIT"
                android:textStyle="bold" />

        </RelativeLayout>


    </ScrollView>
   </LinearLayout>