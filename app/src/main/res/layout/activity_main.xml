<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:background="#8A000000">
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle"
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:text="Verification and Login"
            android:textAlignment="center"
            android:textColor="@color/orange_A100"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_marginStart="76dp"
            android:layout_marginTop="1dp"
            android:text="(சரிபார்ப்பு மற்றும் உள்நுளைவு)"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:background="#61000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:src="@drawable/game"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:alpha="0.6"
            android:scaleType="fitXY" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="நீங்கள் நடத்தும் விளையாட்டுப் போட்டிகளை பதிவு"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="செய்ய மொபைல் நம்பரை உள்ளிடவும்"
            android:textSize="12dp"

            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enableinternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone"
            android:layout_centerHorizontal="true"
            android:text="Please Enable Internet Connection ..."
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="invisible" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="46dp"
            android:ems="10"
            android:hint="Your Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColorHint="@color/green_300" />

        <TextView
            android:id="@+id/phonetamil"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:text="(உங்களுடைய கைபேசி எண்ணை உள்ளிடவும்)"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/phonetamil"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-11dp"
            android:background="@color/gray"
            android:text="SUBMIT"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="6dp"
            android:ellipsize="marquee"
            android:textAlignment="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=" Welcome to Touranament Application "
            android:textColor="@color/yellow"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@color/bas"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/game"/>
            <TextView
                android:id="@+id/Cshow"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="போட்டி நடைபெறும் இடங்களை காண்க ."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

<Button
    android:id="@+id/Cviewes"
    android:layout_marginTop="60dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="50dp"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:textStyle="bold"
    android:textSize="25dp"
    android:text="CRICKET"/>

                        <TextView
                            android:id="@+id/cvid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:background="@color/black"
                            android:text="Watch Cricket Videos"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/Vviewes"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="21dp"
                            android:text="VOLLEYBALL"/>
                        <TextView
                            android:id="@+id/vvid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/black"
                            android:text="Watch VolleyBall Videos"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight=".5"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/Kviewes"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="KABADDI"/>
    <TextView
        android:id="@+id/kvid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:background="@color/black"
        android:text="Watch Kabaddi Videos"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />
</LinearLayout>


                    <LinearLayout
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/Fviewes"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:text="FOOTBALL"/>
                        <TextView
                            android:id="@+id/fvid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/black"
                            android:text="Watch Football Videos"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/nointertamil"
                android:layout_width="230dp"
                android:layout_height="wrap_content"

                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:textStyle="bold"
                android:text="(இண்டெர்நெட் ஆன் செய்யவும்)" />

            <TextView
                android:id="@+id/nointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="Please Check Internet Connection.../!"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/refer"
                android:layout_width="141dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/refersh" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>